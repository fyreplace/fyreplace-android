<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    app:startDestination="@id/fragment_feed">
    <fragment
        android:id="@+id/fragment_feed"
        android:name="app.fyreplace.client.ui.FeedFragment"
        android:label="@string/destination_feed"
        tools:layout="@layout/fragment_feed" />
    <fragment
        android:id="@+id/fragment_notifications"
        android:name="app.fyreplace.client.ui.NotificationsFragment"
        android:label="@string/destination_notifications"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/fragment_archive"
        android:name="app.fyreplace.client.ui.ArchiveFragment"
        android:label="@string/destination_archive"
        tools:layout="@layout/fragment_archive" />
    <fragment
        android:id="@+id/fragment_drafts"
        android:name="app.fyreplace.client.ui.DraftsFragment"
        android:label="@string/destination_drafts"
        tools:layout="@layout/fragment_drafts" />
    <fragment
        android:id="@+id/fragment_settings"
        android:name="app.fyreplace.client.ui.SettingsFragment"
        android:label="@string/destination_settings"
        tools:layout="@layout/fragment_settings">
        <action
            android:id="@+id/to_fragment_login"
            app:destination="@id/fragment_login" />
    </fragment>
    <fragment
        android:id="@+id/fragment_login"
        android:name="app.fyreplace.client.ui.LoginFragment"
        android:label=""
        tools:layout="@layout/fragment_login">
        <argument
            android:name="isRegistering"
            app:argType="boolean" />
    </fragment>
</navigation>
